<fieldset>
  <h2>Gamble</h2>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove", '#', class: "remove_fields pull-right" %>
   <div class="form-group row">
    <div class="col-sm-2 form-control-label">
      <%= f.label :title, "Title" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %><br>
    </div>
    <div class="col-sm-2 form-control-label">
      <%= f.label :description, "Description" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %><br>
    </div>
    <div class="col-sm-2 form-control-label">
      <%= f.label :instructions, "Instructions" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :instructions, class: 'form-control' %><br>
    </div>
    <div class="col-sm-2" >
      <%= f.label :good_outcome, "Good Outcome" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :good_outcome, class: 'form-control' %><br>
    </div>
    <div class="col-sm-2" >
      <%= f.label :bad_outcome, "Bad Outcome" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :bad_outcome, class: 'form-control' %><br>
    </div>
</fieldset>

